{
    "git": {
        "commitMessage": "chore(release): v${version}",
        "tagName": "v${version}",
        "push": true,
        "requireCleanWorkingDir": false,
        "signTag": true
    },
    "github": {
        "release": true,
        "tokenRef": "GITHUB_TOKEN",
        "assets": [
            "app/release/klyx-release-v*.apk"
        ]
    },
    "npm": false,
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": {
                "name": "conventionalcommits",
                "types": [
                    {
                        "type": "feat",
                        "section": "New Features"
                    },
                    {
                        "type": "fix",
                        "section": "Bug Fixes"
                    },
                    {}
                ]
            }
        }
    }
}
